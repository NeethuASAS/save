<div class="page-header">
  <div class="row">
    <div class="span4"><h3><span class="small">Training Calendars</span></h3></div>
    <%= link_to 'Create a new calendar', new_training_calendar_path, :class => "btn btn-primary" %>
  </div>

</div>

<table class="table table-striped table-bordered table-condensed">
  <thead>
  <th>#Id</th>
  <th>Training Duration</th>
  <th>Training Center</th>
  <th>CVET Course</th>
  </thead>

  <tbody>
  <% @training_calendars.each do |training_calendar| %>
      <tr>
        <td><%= training_calendar.id %></td>
        <td>
          <a href="<%= training_calendar_path(training_calendar) %>"><strong><%= training_calendar.start_date %> to <%= training_calendar.end_date %></strong></a>
        </td>
        <td><%= link_to training_calendar.training_center.name, training_calendar.training_center %></td>
        <td><%= link_to training_calendar.course.name, training_calendar.course %></td>
      </tr>
  <% end %>
  </tbody>
</table>