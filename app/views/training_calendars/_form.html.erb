          </select>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="select01">Select Course</label>

        <div class="controls">
          <select id="select02" class="input-xlarge">
            <option>something</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="input01">Batch Size</label>

        <div class="controls">
          <input type="text" class="input-mini" id="input01">
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="input01">Starts on</label>

        <div class="controls">
          <input data-datepicker="datepicker" class="small" type="text" value=""/> Ends on
          <input data-datepicker="datepicker" class="small" type="text" value=""/>
            <span class="help-block">
              Dates are of the format <strong>MM/DD/YYYY</strong> 
            </span>
        </div>
      </div>


      <div class="form-actions">
        <%= f.submit("Save Calendar", :class => "btn btn-primary") %>
        <button class="btn">Cancel</button>
      </div>
    </fieldset>
<% end %>

<script>
    /* Update datepicker plugin so that MM/DD/YYYY format is used. */
    $.extend($.fn.datepicker.defaults, {
        parse: function (string) {
            var matches;
            if ((matches = string.match(/^(\d{2,2})\/(\d{2,2})\/(\d{4,4})$/))) {
                return new Date(matches[3], matches[1] - 1, matches[2]);
            } else {
                return null;
            }
        },
        format: function (date) {
            var
                    month = (date.getMonth() + 1).toString(),
                    dom = date.getDate().toString();
            if (month.length === 1) {
                month = "0" + month;
            }
            if (dom.length === 1) {
                dom = "0" + dom;
            }
            return month + "/" + dom + "/" + date.getFullYear();
        }
    });
</script>