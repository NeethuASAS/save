              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="control-group">
        <label class="control-label" for="select01">Select Training Center</label>

        <div class="controls">
          <select id="select01" class="input-xlarge">
            <option>something</option>
            <option>2</option>
